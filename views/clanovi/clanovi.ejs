<% layout('layouts/boilerplate') %>

<div class="container">

</div>

<section class="clanovi mb-5">
    <div class="container">
        <!-- Dodaj novog clana -->
        <% if(currentUser && currentUser.isAdmin){ %>
            <div class="div d-flex justify-content-center mb-4">
                <a href="/clanovi/novi_clan" class="btn" role="button">Dodaj novog člana</a>
            </div>
        <% } %>

        <!-- Naslov -->
        <div class="col-lg-12">
            <h1 class="text-center mb-5">Članovi</h1>
        </div>

        <div class="row d-flex justify-content-between">
            <% for (let clan of clanovi) { %>
                <div class="col-xl-5">
                    <div class="row kartica mb-4">
                        <div class="col-xs-4">
                            <img src="/images/clanovi/<%= clan.image%>" alt="" class="img-fluid">
                        </div>
                        <div class="col-xs-8 d-flex flex-column justify-content-center align-items-center">
                            <h4><%= clan.title %></h4>
                            <p class="lead"><%= clan.funkcija %></p>
                            <a href="clanovi/<%= clan._id %>" class="dugme">Saznaj više</a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</section>

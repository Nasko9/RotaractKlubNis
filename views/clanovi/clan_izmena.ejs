<% layout('layouts/boilerplate') %>

<div class="container">
    <h2><%= title %></h2>
    <form action="/clanovi/<%= clan._id %>?_method=PUT" method="POST">
        <!-- Ime i prezime -->
        <div class="form-group">
            <label for="title">Ime i prezime</label>
            <input type="text" class="form-control" id="title" name="clan[title]" value="<%= clan.title %>" required>
        </div>

        <!-- Funkcija -->
        <div class="form-group">
            <label for="funkcija">Funkcija</label>
            <input type="text" class="form-control" id="funkcija" name="clan[funkcija]" value="<%= clan.funkcija %>" required>
        </div>
    
        <!-- Osnovne informacije -->
        <div class="form-group">
            <label for="osnovne_informacije">Osnovne informacije</label>
            <textarea  type="text" class="form-control" id="osnovne_informacije" name="clan[osnovne_informacije]" rows="3" required><%= clan.osnovne_informacije %></textarea>
        </div>
    
        <!-- Rotarakt iskustvo -->
        <div class="form-group">
            <label for="rotaract_iskustvo">Rotarakt iskustvo</label>
            <textarea type="text" class="form-control" id="rotaract_iskustvo" name="clan[rotaract_iskustvo]" rows="3" required><%= clan.rotaract_iskustvo %></textarea>
        </div>

        <!-- Obrazovanje -->
        <div class="form-group">
            <label for="obrazovanje">Obrazovanje</label>
            <textarea type="text" class="form-control" id="obrazovanje" name="clan[obrazovanje]" rows="3" required><%= clan.obrazovanje %></textarea>
        </div>

        <!-- Radno iskustvo -->
        <div class="form-group">
            <label for="radno_iskustvo">Radno iskustvo</label>
            <textarea type="text" class="form-control" id="radno_iskustvo" name="clan[radno_iskustvo]" rows="3" required><%= clan.radno_iskustvo %></textarea>
        </div>

        <!-- interesovanja -->
        <div class="form-group">
            <label for="interesovanja">Interesovanja</label>
            <textarea type="text" class="form-control" id="interesovanja" name="clan[interesovanja]" rows="3" required><%= clan.interesovanja %></textarea>
        </div>

        <!-- Dugme -->
        <button type="submit" class="btn">Izvrsi izmenu</button>
    </form>

    <a href="/clanovi/<%= clan._id %>">Nazad</a>
</div>
<% layout('layouts/boilerplate') %>

<div class="container">
    <h2><%= title %></h2>
    <form action="/akcije" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
        <!-- Title -->
        <div class="form-group">
            <label for="title">Naziv</label>
            <input type="text" class="form-control" id="title" name="akcija[title]" required>
            <div class="valid-feedback">Looks good!</div>
        </div>
    
        <!-- Introduction -->
        <div class="form-group">
            <label for="introduction">Uvodni tekst</label>
            <textarea  type="text" class="form-control" id="introduction" name="akcija[introduction]" rows="3" required></textarea>
            <div class="valid-feedback">Looks good!</div>
        </div>
    
        <!-- description -->
        <div class="form-group">
            <label for="description">Opis akcije</label>
            <textarea type="text" class="form-control" id="description" name="akcija[description]" rows="3" required></textarea>
            <div class="valid-feedback">Looks good!</div>
        </div>

        <!-- Image -->
        <div class="form-group">
            <label for="image">Slika</label>
            <input type="file" class="form-control-file" id="image" name="akcija[image]">
        </div>
    
         <!-- Date -->
         <div class="form-group">
            <label for="date">Datum</label>
            <input type="text" class="form-control" id="date" name="akcija[date]" required>
            <div class="valid-feedback">Looks good!</div>
        </div>

        <!-- Dugme -->
        <button type="submit" class="btn">Dodaj akciju</button>
    </form>
</div>
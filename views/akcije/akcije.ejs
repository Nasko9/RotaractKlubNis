<% layout('layouts/boilerplate') %>

<!-- Akcije -->
<section class="akcije">
    <div class="container">
        <% if(currentUser && currentUser.isAdmin){ %>
            <!-- Doja akciju -->
            <a href="/akcije/nova_akcija" class="btn mb-3">Nova akcija</a>
        <% } %>
        <!-- Naslov -->
        <div class="col-lg-12">
            <h2 class="text-center mb-4"><%= title %></h2>
        </div>

        <% for (let akcija of akcije) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-lg-4">
                        <img src="/images/akcije/<%= akcija.image %>" alt="" class="img-fluid">
                    </div>
                    <div class="col-lg-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= akcija.title %></h5>
                            <p class="card-text"><%= akcija.introduction %></p>
                            <a href="/akcije/<%= akcija._id %>" class="dugme">Saznaj vi≈°e</a>
                        </div>
                    </div>
                </div>
           </div>
        <% } %>

        <% if (pages > 0) { %>
            <ul class="pagination justify-content-center">
                <% if (current == 1) { %>
                    <li class="page-item disabled">
                        <a class="page-link">First</a>
                    </li>
                <% } else { %>
                    <li class="page-item">
                        <a href="/akcije/?page=1" class="page-link">First</a>
                    </li>
                <% } %>

                <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>

                <% if (i !== 1) { %>
                    <li class="page-item disabled">
                        <a class="page-link">...</a>
                    </li>
                <% } %>

                <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                    <% if (i == current) { %>
                        <li class="active">
                            <a class="page-link"><%= i %></a>
                        </li>
                    <% } else { %>
                        <li class="page-item">
                            <a href="/akcije/?page=<%= i %>" class="page-link"><%= i %></a>
                        </li>
                    <% } %>

                    <% if (i == Number(current) + 4 && i < pages) { %>
                        <li class="page-item disabled">
                            <a class="page-link">...</a>
                        </li>
                    <% } %>
                <% } %>

                <% if (current == pages) { %>
                    <li class="page-item disabled">
                        <a class="page-link">Last</a>
                    </li>
                <% } else { %>
                    <li class="page-item">
                        <a href="/akcije/?page=<%= pages %>" class="page-link">Last</a>
                    </li>
                <% } %>
            </ul>
        <% } %>
    </div>
</section>
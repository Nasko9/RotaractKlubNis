<!-- Akcije -->
<section class="akcije">
    <div class="container">
        <% if(currentUser && currentUser.isAdmin){ %>
            <!-- Doja akciju -->
            <a href="/akcije/nova_akcija" class="btn mb-3">Nova akcija</a>
        <% } %>
        <!-- Naslov -->
        <div class="col-lg-12">
            <h2 class="text-center mb-4"><%= title %></h2>
        </div>

        <% for (let akcija of akcije.reverse()) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-lg-4">
                        <img src="/images/slider/NGkoncert.jpg" alt="" class="img-fluid">
                    </div>
                    <div class="col-lg-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= akcija.title %></h5>
                            <p class="card-text"><%= akcija.introduction %></p>
                            <a href="akcije/<%= akcija._id %>" class="dugme">Saznaj vi≈°e</a>
                        </div>
                    </div>
                </div>
           </div>
        <% } %>

        
    </div>
</section>